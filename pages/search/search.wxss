page {
  background-color: #dedede;
  padding: 20rpx;
}
.search {
  display: flex;
  height: 60rpx;
}
.search input {
  flex: 1;
  background-color: white;
  height: 100%;
  padding-left: 20rpx;
}
.search button {
  width: 110rpx;
  height: 100%;
  display: flex;
  margin: 0 10rpx;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  padding: 0;
}
.neirong {
  margin-top: 30rpx;
}
.neirong .searchitem {
  background-color: white;
  border-bottom: 1rpx solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding: 10rpx 15rpx;
}
