@import "./styles/iconfont.wxss";
page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    /* 规定两个并排的带边框的框 */
    box-sizing: border-box;
}
/* 
主题颜色通过变量来实现
1.less中存在变量这个知识
2.原生的css和wxss也是支持变量
*/
page{
    /* 定义主题颜色 */
    --themeColor:#eb4450;
/* 
    定义统一字体大小，假设设计稿大小是375rpx
    1px = 2rpx
    14px = 28rpx
*/
        font-size: 28rpx;
}
image{
    width:100%
}